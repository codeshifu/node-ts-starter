{
  "name": "node-ts-starter",
  "version": "0.0.0",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "engines": {
    "node": ">= 14"
  },
  "author": "Luqman Olushi <olushilukmon03@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "parcel build",
    "bundle": "npm-run-all clean build",
    "clean": "rimraf dist",
    "dev": "nodemon --delay 1s --watch src --ext ts --exec 'npm-run-all bundle start'",
    "start": "node dist/index.js",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "parcel": "2.4.1",
    "prettier": "2.6.2",
    "rimraf": "3.0.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
